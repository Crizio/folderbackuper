<Window x:Name="LoginWindows" x:Class="FolderBackup.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="245.257" Width="371.375" ResizeMode="NoResize">
    <Window.Resources>
        <Color x:Key="Color1">#FFD7E4F2</Color>
    </Window.Resources>
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,3.4,0">
        <Grid.Background>
            <SolidColorBrush Color="#FFE3F0FE"/>
        </Grid.Background>
        <Label Content="FolderBackup" HorizontalAlignment="Left" Margin="98,19,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Black" FontSize="21" Width="155"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="167,72,0,0" VerticalAlignment="Top" Width="86" TextWrapping="Wrap"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="98,144,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="178,144,0,0" VerticalAlignment="Top" Width="75"/>
        <PasswordBox HorizontalAlignment="Left" Margin="167,101,0,0" VerticalAlignment="Top" Height="23" Width="86"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="98,73,0,0" VerticalAlignment="Top" Height="28"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="98,101,0,0" VerticalAlignment="Top" Height="28"/>
        <Label x:Name="registerLabel" Content="Not yet registered? Sign up!" Margin="120,168,0,0" VerticalAlignment="Top" Height="23" Width="121" FontSize="9" HorizontalAlignment="Left" MouseEnter="Label_MouseEnter" MouseLeave="registerLabel_MouseLeave"/>

    </Grid>
</Window>
